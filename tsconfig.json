{
  "compilerOptions": {
    "types": ["node", "jest"],
    "module": "es2020",
    "moduleResolution": "node",
    "strict": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "./jest.config.ts", "api/*"]
}
